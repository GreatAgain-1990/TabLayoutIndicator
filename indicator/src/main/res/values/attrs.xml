<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义TabTitle-->
    <declare-styleable name="TabLayoutTitle">
        <attr name="title_normal_color" format="color|reference"/>
        <attr name="title_select_color" format="color|reference"/>
        <attr name="title_is_Bold" format="boolean"/>
        <attr name="title_only_select_Bold" format="boolean"/>
        <attr name="title_text_normal_size" format="integer"/>
        <attr name="title_text_select_size" format="integer"/>
        <attr name="title_anim_mode"  format="integer">
            <enum name="START" value="0"/>
            <enum name="MIDDLE" value="1"/>
        </attr>

        <attr name="title_indicator_width" format="dimension|reference"/>
        <attr name="title_indicator_height" format="dimension|reference"/>
        <attr name="title_indicator_color" format="color|reference"/>
        <attr name="title_indicator_drawable" format="reference"/>
    </declare-styleable>

    <!--自定义TabTextTitle-->
    <declare-styleable name="TabLayoutTextTitle">
        <attr name="text_normal_color" format="color|reference"/>
        <attr name="text_select_color" format="color|reference"/>
        <attr name="text_is_Bold" format="boolean"/>
        <attr name="text_only_select_Bold" format="boolean"/>
        <attr name="text_normal_size" format="integer"/>
        <attr name="text_select_size" format="integer"/>
        <attr name="text_margin" format="integer"/>

        <attr name="text_indicator_width" format="dimension|reference"/>
        <attr name="text_indicator_height" format="dimension|reference"/>
        <attr name="text_indicator_color" format="color|reference"/>
        <attr name="text_indicator_drawable" format="reference"/>
        <attr name="text_indicator_length_auto_transformation" format="boolean"/>
        <attr name="text_indicator_match_text_width" format="boolean"/>
    </declare-styleable>

    <!--自定义TabLayout指示器-->
    <declare-styleable name="TabLayoutIndicator">
        <attr name="indicator_width" format="dimension|reference"/>
        <attr name="indicator_color" format="color|reference"/>
        <attr name="indicator_drawable" format="reference"/>
        <attr name="indicator_can_anim" format="boolean"/>
        <attr name="indicator_match_title_width" format="boolean"/>
        <attr name="indicator_scale" format="float"/>
    </declare-styleable>
</resources>
